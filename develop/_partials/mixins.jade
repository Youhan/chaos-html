mixin hov4(img,overlay,cover,thref,title,sthref,subtitle)
	.ol-hover.hover-4
		img(src=img, alt='image hover')
		.ol-overlay(class=(overlay ? overlay : 'ov-grad1-alpha-20'))
		.cover(class=(cover ? cover : 'ov-dark-alpha-95'))
		.icons
			a(href=img).ol-lightbox: i.oli.oli-search
			a(href="#"): i.oli.oli-right
		if title
			h3.title: a(href=(thref?thref:"#"))=title
		else
			h3.title: a(href=(thref?thref:"#"))
				mixin lorem(2,'')
		h4.subtitle
			if sthref
				a(href=sthref)=(subtitle ? subtitle : "category")
			else
				=(subtitle ? subtitle : "category")
