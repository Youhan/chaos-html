mixin ibv3(icon,title,des,btn,btnHref,btnText,btnClass)
	// #####Begin iconbox v3
	.icon-box.ib-v3
		i(class=(icon ? icon : 'ol ol-beaker'))
		h3.title
			if title
				span=title
			else
				span 
					mixin lorem(2,'')
		if des
			p=des
		else
			p
				mixin lorem(15)
		if btn
			a(href=(btnHref?btnHref:"#"), class=(btnClass ? btnClass : 'btn btn-small btn-circle btn-skin-dark'))=(btnText?btnText:"Read More")
	// #####End iconbox v3
