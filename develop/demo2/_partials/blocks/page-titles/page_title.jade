// handle parallax mods

- var bgParMode =''
- var titleParMode = ''
- var titleClass = ''

if pageTitleParallaxMode === 'bg'
	- var bgParMode = 'mode-title'
else if pageTitleParallaxMode === 'title'
	- var titleParMode = 'mode-header-demo-2'
	- var titleClass = 'parallax-layer'
else if pageTitleParallaxMode == 'bg-title'
	- var bgParMode = 'mode-title'
	- var titleParMode = 'mode-header-demo-2'
	- var titleClass = 'parallax-layer'
else
	- var bgParMode =''
	- var titleParMode = ''
	- var titleClass = ''


if ptType != "false"
	.page-head(class=pageTitleClass)&attributes( pageTitleImage != '' ? {'data-img-src':pageTitleImage} : {} )&attributes( bgParMode != '' ? {'data-parallax-mode':bgParMode} : {} )&attributes( pageTitleParallaxFactor != '' ? {'data-bg-parallax-factor':pageTitleParallaxFactor} : {} )

		if gmap
			- var loadGmapScript = ture
			#gmap(data-address=gmap)

		.container
			.tb-vcenter-wrapper
				.title-wrapper.vcenter&attributes(titleParMode!=""?{"class":titleClass,"data-parallax-mode":titleParMode}:{})
					if (PageTitleHead != "")
						h4.head #{PageTitleHead}

					h1.title #{pageTitle}

					if (PageTitleDesc != "")
						h2.description #{PageTitleDesc}

				if bcType === 'intitle'
					.breadcrumb-wrapper.vcenter
						include breadcrumbs

		if pageTitleVid
			.video-container
				.owl-videobg.autoplay(data-src=pageTitleVid)


		
		
