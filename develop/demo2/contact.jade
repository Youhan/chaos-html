extends /_layouts/lo-normal/fullwidth

append config

	- var PSbodyClass = bodyClasses.push('bg-gray')
	- var PSwrapperClasses = wrapperClasses.push('boxed-layout-padding')
	- var PSheaderClasses = headerClasses.push(' light sticky-light') 
	- var currentMenu = "Contact"
	- var pageTitle = "contact"
	- var PageTitleHead = "WHY NOT?"
	- var PageTitleDesc = ""
	- var bcType = "false"
	- var gmap = "Footscray VIC 3011 Australia"
	- var pageTitleClass = 'h-400 center-it dark ov-grad2-alpha-80'
	// - var pageTitleImage = dirPrefix+"assets/img/page-title-bg-dark-1.jpg"
	// - var pageTitleParallaxMode = 'bg-title'


block main-area
	section.section.slim-container
		.container
			.row
				.col-md-6.col-md-offset-3.text-center.pull-up-200.contact-form
					.heading-with-sub
						h4.subtitle You my wait for a couple of days
					.sp-line-50.m-bottom-20
					form#contact-form(action=dirPrefix+'php/contact/contact.php')
						label(for="name") Name
						input.m-bottom-20.form-control(type="text", name="name")
						label(for="email") Email
						input.m-bottom-20.form-control(type="email", name="email")
						label(for="subject") Subject
						input.m-bottom-20.form-control(type="text", name="subject")
						label Message
						textarea.m-bottom-20.form-control(rows=6 type="textarea" name="message")
						input.btn.btn-medium.btn-skin-dark.btn-thick-border.btn-block(type='submit', value='Send it')
	