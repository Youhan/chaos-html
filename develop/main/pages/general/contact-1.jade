extends ../../../_layouts/lo-normal/fullwidth
append config
	- var dirPrefix = '../../'
	- var PSbodyClass = bodyClasses.push('sticky-header')
	- var PSwrapperClasses = wrapperClasses.push('regular-layout')
	- var PSheaderClasses = headerClasses.push("") 
	- var pageTitle = "Contact Page #1"
	- var currentMenu = "Features"
	- var pageTitleClass = 'parallax-layer h-300 ov-grad7-alpha-90 dark'
	- var pageTitleImage = dirPrefix+"assets/img/backgrounds/22.jpg"

	
block main-area
	section.section.bg-gray: .container: .row
		.col-md-4
			h3.with-shaded-label 
				span.shaded-label Office #1
				| Office #1 
			.sp-blank-20
			p 
				mixin lorem(20)
		.col-md-4
			p
				mixin lorem(20)
			ul.icon-list
				li
					i.oli.oli-ResearchGate
					a(href="#") ResearchGate Profile
				li
					i.oli.oli-address_book
					mixin lorem(0)
				li
					i.oli.oli-user_male_circle
					mixin lorem(4,0)
		.col-md-4
			.google-maps-container
				<iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d3022.260812859955!2d-73.990184!3d40.756288!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb134c693ac14a04c!2sThe+TimesCenter!5e0!3m2!1sen!2suk!4v1393485725496" width="500" height="450" frameborder="0" style="border:0"></iframe>

	section.section: .container: .row
		.col-md-4
			h3.with-shaded-label 
				span.shaded-label Secretary
				| Secretary Office
			.sp-blank-20
			p 
				mixin lorem(20)
		.col-md-4
			.ol-accordion
				.ac-item.open
					.item-head
						i.icon.oi-plus
						span Office
					.item-body
						p Cambridge, MA 02138, United States
				.ac-item
					.item-head
						span Phone
					.item-body
						|023 434 534 234</br>
						|CHAOS Interal: 32231</br>
						|International: +44 34 2332 7568
				.ac-item
					.item-head
						span Fax
					.item-body
						|023 434 534 234</br>
						|CHAOS Interal: 32231</br>
						|International: +44 34 2332 7568
		.col-md-4
			.google-maps-container
				<iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d3022.260812859955!2d-73.990184!3d40.756288!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb134c693ac14a04c!2sThe+TimesCenter!5e0!3m2!1sen!2suk!4v1393485725496" width="500" height="450" frameborder="0" style="border:0"></iframe>

	section.section.bg-gray
		.container
			.row
				.col-md-4
					h3.with-shaded-label 
						span.shaded-label Form
						| Contact Form
					.sp-blank-20
					p 
						mixin lorem(20)
				.col-md-8
					form#contact-form(action=dirPrefix+'php/contact/contact.php')
						.row.multi-columns-row.col-margin-bottom-20
							.col-md-6
								label(for="name") Name
								input.form-control(type="text", name="name")
							.col-md-6
								label(for="email") Email
								input.form-control(type="email", name="email")
							.col-md-12
								label(for="subject") Subject
								input.m-bottom-20.form-control(type="text", name="subject")
								label Message
								textarea.m-bottom-20.form-control(rows=6 type="textarea", name="message")
								input.btn.btn-small.btn-wide.pull-right(type='submit', value='Post')
